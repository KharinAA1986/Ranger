<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.play.PlayFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_raise"
        style="@style/ButtonPokerAction"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/btn_raise_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_call"
        style="@style/ButtonPokerAction"
        android:text="@string/btn_call_text"
        app:layout_constraintBottom_toBottomOf="@+id/btn_raise"
        app:layout_constraintEnd_toStartOf="@+id/btn_raise" />

    <Button
        android:id="@+id/btn_fold"
        style="@style/ButtonPokerAction"
        android:text="@string/btn_fold_text"
        app:layout_constraintBottom_toBottomOf="@+id/btn_call"
        app:layout_constraintEnd_toStartOf="@+id/btn_call" />

    <TextView
        android:id="@+id/tv_choose_spot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/_dummy_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>